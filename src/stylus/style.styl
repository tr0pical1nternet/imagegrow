:root
  --duration: .2s

:focus
  outline: 5px dotted rgba(20, 250, 250, .75);
  // -moz-outline-radius: 75%;
  // -webkit-outline-radius: 75%;
  outline-offset: 2px;

*
  box-sizing border-box

body
  margin 0
  min-height 100vh

img
  display block
  width 100%
  height auto

.svg-icon
  display block
  overflow visible
  stroke currentColor
  stroke-width 8
  stroke-linecap round
  width 100%
  height auto

.button
  width 2rem
  padding .5rem
  margin .625rem auto 0
  border 2px solid black
  border-radius 50%
  background-color #22FF22
  box-shadow .125rem .125rem 0 0 black

  &:hover
    color #222222
    background-color #66ff66

  &:active
    color #22FF22
    background-color black

.text-block
  display flex
  flex-direction column
  max-width: 60ch
  font-family sans-serif
  line-height 1.5
  margin-left auto;
  margin-right auto;
  padding 1.5rem

  
  &__figure
    display inline-block
    margin-left auto
    margin-right auto
    
  img
    max-width 200px
    border 2px solid black
    box-shadow 8px 8px 0 black

@import 'imlarge'

button::-moz-focus-inner, input[type="color"]::-moz-focus-inner, input[type="reset"]::-moz-focus-inner, input[type="button"]::-moz-focus-inner, input[type="submit"]::-moz-focus-inner
  border 0

        
    
  
